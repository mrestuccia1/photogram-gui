<html><head>
    <title>Target: Photogram GUI</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

    <h1><%= @user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%= @user.id %>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value="<%= @user.username %>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (3)</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Image</th>
      <th>Owner</th>
      <th>Caption</th>
      <th>Posted</th>
      <th></th>
    </tr>

    <% @posts.each do |photo| %>
      <tr>
        <td>
          <img src="<%= photo.image %>">
        </td>
        <td><%= @user.username %></td>
        <td><%= photo.caption %></td>
        <td><%= photo.created_at.strftime("%Y-%m-%d %H:%M:%S %Z") %></td>
        <td>
          <a href="/photos/<%= photo.id %>">Show details</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


  
</body>
</html>
